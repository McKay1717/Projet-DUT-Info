{% extends 'base.html.twig' %}

{% block body %}

    {% include 'Gestion_Abs_IUTBM_Bundle:include:nav.html.twig' %}

    <section class="container">

        <br><br><br>

        <div class="row">
            <div class="col-lg-12">
                <div class="page-header well">
                    <h1>Ajouter une nouvelle absence</h1>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-offset-2 col-lg-8 well">

                {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

                <fieldset class="row">

                    <div class="col-lg-offset-1 col-lg-10">

                        <div class="form-group">
                            {{ form_label(form.debutAbs) }}
                            {{ form_widget(form.debutAbs) }}
                            {{ form_errors(form.debutAbs) }}
                        </div>

                        <div class="form-group">
                            {{ form_label(form.finAbs) }}
                            {{ form_widget(form.finAbs) }}
                            {{ form_errors(form.finAbs) }}
                            {% if erreurDate is defined %}
                                <div class="alert alert-danger">{{ erreurDate  }}</div>
                            {% endif %}
                        </div>

                        <div class="form-group">
                            {{ form_widget(form.fileFichJustificatif) }}
                            {{ form_errors(form.fileFichJustificatif) }}
                        </div>

                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Valider</button>
                        </div>

                    </div>

                </fieldset>

                {{ form_rest(form) }}

                {{ form_end(form) }}

            </div>

        </div>

    </section>

{%  endblock %}